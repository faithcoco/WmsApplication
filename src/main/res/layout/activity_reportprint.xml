<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.declaration.ReportprintActivity">



    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/ll_form"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_cinvname"
    android:padding="@dimen/layout_margin"
    style="@style/form_fontsize"
    android:background="@drawable/bg_border"

    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/form_fontsize"
        android:background="@drawable/bg_border"
        android:text="工位"
        android:layout_width="60dp"
     />
    <TextView
        style="@style/form_fontsize"
        android:background="@drawable/bg_border"
        android:text="分成总名称"
        android:layout_width="90dp"
 />
    <TextView
        style="@style/form_fontsize"
        android:background="@drawable/bg_border"
        android:text="工单号"
        android:layout_width="70dp" />
    <TextView
        style="@style/form_fontsize"
        android:background="@drawable/bg_border"
        android:text="生产日期"
        android:layout_width="100dp" />
    <TextView
        style="@style/form_fontsize"
        android:background="@drawable/bg_border"
        android:text="数量"
        android:layout_width="60dp"
 />
    <TextView
        style="@style/form_fontsize"
        android:background="@drawable/bg_border"
        android:text="托盘/料架编号"
        android:layout_width="70dp"
         />
    <TextView
        style="@style/form_fontsize"
        android:background="@drawable/bg_border"
        android:text="操作工"
        android:layout_width="50dp" />
</LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/bg_border"
            android:id="@+id/rv_list1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>




      
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/form_fontsize"
                        android:text="材料名称"
                        android:layout_width="100dp" />
                    <TextView
                        style="@style/form_fontsize"
                        android:text="物料零件号"
                        android:layout_width="70dp" />
                    <TextView
                        style="@style/form_fontsize"
                        android:text="物料入库批号"
                        android:layout_width="80dp" />
                    <TextView
                        style="@style/form_fontsize"
                        android:text="供应商生产日期"
                        android:layout_width="110dp" />
                </LinearLayout>
             <androidx.recyclerview.widget.RecyclerView
                 android:background="@drawable/bg_border"
                 android:id="@+id/rv_list2"
                 android:layout_width="match_parent"
                 android:layout_height="95dp">

             </androidx.recyclerview.widget.RecyclerView>




            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_time"
                    style="@style/form_fontsize"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:gravity="start"
                    android:text="面料进入静置房时间:"
                    />
                <TextView
                    style="@style/form_fontsize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="备注："
                    />
            </LinearLayout>
                <ImageView

                    android:id="@+id/iv_qrcode"
                     android:layout_marginLeft="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_border"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/b_print"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/blue"
        android:text="打印"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>