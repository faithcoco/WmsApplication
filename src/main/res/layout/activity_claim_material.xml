<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lkrh.storescontrol.view.ClaimMaterialActivity">
    <LinearLayout
        android:id="@+id/l_search"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/l_condition"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textview"
                    android:id="@+id/tv_title1"
                    android:text="生产订单号："
                    />
                <EditText
                    android:layout_gravity="center_vertical"
                    style="@style/edittext"
                    android:id="@+id/et_ccode"
                    android:layout_toRightOf="@id/tv_title1"
                    />
            </LinearLayout>


            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    style="@style/textview"

                    android:text="产品编码："
                    />
                <EditText
                    android:id="@+id/et_cinvcode"
                    android:layout_gravity="center_vertical"
                    style="@style/edittext"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_toRightOf="@id/tv_title1"
                    />
            </LinearLayout>
            <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                style="@style/textview"
                android:id="@+id/tv_title0"
                android:text="子件编码："
                />
            <EditText
                android:id="@+id/et_invcode"
                android:layout_gravity="center_vertical"
                style="@style/edittext"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_toRightOf="@id/tv_title1"
                />
        </LinearLayout>
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    style="@style/textview"

                    android:text="仓库："
                    />
                <EditText
                    android:id="@+id/et_cwhcode"
                    android:layout_gravity="center_vertical"
                    style="@style/edittext"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_toRightOf="@id/tv_title1"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_centerVertical="true"
            android:id="@+id/b_search"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:background="@color/blue"
            android:textColor="@android:color/white"
            android:text="查询"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </RelativeLayout>
    <LinearLayout style="@style/line"/>
    </LinearLayout>
 <RelativeLayout
     android:layout_alignParentBottom="true"
     android:id="@+id/l_bottom"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:layout_margin="10dp"
         android:layout_centerVertical="true"
         android:text="总数："
         android:id="@+id/tv_total"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/b_submit"
         android:layout_margin="10dp"
         android:layout_alignParentRight="true"
         android:background="@color/blue"
         android:textColor="@android:color/white"
         android:text="提交"
         android:layout_width="wrap_content"
         android:layout_height="40dp" />
 </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_below="@id/l_search"
        android:layout_above="@id/l_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
</layout>