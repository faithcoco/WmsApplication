<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.lkrh.storescontrol.view.ClaimMaterialActivity">
        <LinearLayout
            android:id="@+id/l_search"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/layout_title"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/l_condition"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/textview"
                            android:id="@+id/tv_title1"
                            android:text="订单号："
                            />
                        <EditText
                            android:layout_gravity="center_vertical"
                            style="@style/edittext"
                            android:id="@+id/et_ccode"
                            android:layout_toRightOf="@id/tv_title1"
                            />
                    </LinearLayout>


                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center_vertical"
                            style="@style/textview"

                            android:text="产品编码："
                            />
                        <EditText
                            android:id="@+id/et_cinvcode"
                            android:layout_gravity="center_vertical"
                            style="@style/edittext"
                            android:layout_marginRight="@dimen/layout_margin"
                            android:layout_toRightOf="@id/tv_title1"
                            />
                    </LinearLayout>
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center_vertical"
                            style="@style/textview"
                            android:id="@+id/tv_title0"
                            android:text="客户："
                            />
                        <EditText
                            android:id="@+id/et_customer"
                            android:layout_gravity="center_vertical"
                            style="@style/edittext"
                            android:layout_marginRight="@dimen/layout_margin"
                            android:layout_toRightOf="@id/tv_title1"
                            />
                    </LinearLayout>
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center_vertical"
                            style="@style/textview"

                            android:text="仓库："
                            />
                        <EditText
                            android:id="@+id/et_cwhcode"
                            android:layout_gravity="center_vertical"
                            style="@style/edittext"
                            android:layout_marginRight="@dimen/layout_margin"
                            android:layout_toRightOf="@id/tv_title1"
                            />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout style="@style/line"/>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/b_search"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:textColor="@android:color/white"
                android:text="查询"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>





    </RelativeLayout>
</layout>