<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/textview"

                android:text="名称："
                />
            <TextView
                android:layout_gravity="center_vertical"
                style="@style/edittext"
                android:id="@+id/tv_cinvname"
                android:layout_toRightOf="@id/tv_title1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:gravity="center_vertical"
                style="@style/textview"
                android:text="投入数量："
                />
            <TextView
                android:id="@+id/tv_iqty"
                android:gravity="center_vertical"
                style="@style/textview"

                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                style="@style/textview"

                android:text="批次："
                />
            <TextView
                android:id="@+id/tv_cbatch"
                android:layout_gravity="center_vertical"
                style="@style/edittext"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_toRightOf="@id/tv_title1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                style="@style/textview"

                android:text="卷号："
                />
            <TextView
                android:id="@+id/et_batch"
                android:layout_gravity="center_vertical"
                style="@style/edittext"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_toRightOf="@id/tv_title1"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                style="@style/textview"

                android:text="供应商批次："
                />
            <TextView
                android:id="@+id/tv_cvenbatch"
                android:layout_gravity="center_vertical"
                style="@style/edittext"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_toRightOf="@id/tv_title1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                style="@style/textview"

                android:text="应领数量："
                />
            <TextView
                android:id="@+id/tv_moqty"
                android:layout_gravity="center_vertical"
                style="@style/edittext"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_toRightOf="@id/tv_title1"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                style="@style/textview"

                android:text="料号："
                />
            <TextView
                android:id="@+id/tv_cinvcode"
                android:layout_gravity="center_vertical"
                style="@style/edittext"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_toRightOf="@id/tv_title1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                style="@style/textview"

                android:text="领用货位："
                />
            <TextView
                android:id="@+id/tv_cposcode"
                android:layout_gravity="center_vertical"
                style="@style/edittext"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_toRightOf="@id/tv_title1"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            style="@style/textview"

            android:text="规格型号："
            />
        <TextView
            android:id="@+id/tv_cInvStd"

            android:layout_gravity="center_vertical"
            style="@style/edittext"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_toRightOf="@id/tv_title1"
            />
    </LinearLayout>
</LinearLayout>