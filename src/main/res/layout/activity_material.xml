<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="bean"
            type="com.lkrh.storescontrol.bean.ArrivalHeadBean"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/l_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/layout_title"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    style="@style/textview"
                    android:textColor="@color/blue"
                    android:id="@+id/tv_title1"
                    android:text="材料编码："
                    />

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_centerVertical="true"
                    style="@style/edittext"
                    android:id="@+id/et_cwhcode"
                    android:layout_toRightOf="@id/tv_title1"
                    android:layout_toLeftOf="@id/iv_scan"
                    />
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/textview"

                        android:text="名称："
                        />
                    <TextView
                        android:id="@+id/tv_cinvname"
                        android:layout_gravity="center_vertical"
                        style="@style/edittext"

                        android:layout_toRightOf="@id/tv_title1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:gravity="center_vertical"
                        style="@style/textview"
                        android:text="投入数量："
                        />
                    <EditText
                        android:layout_marginRight="10dp"
                        android:id="@+id/et_iqty"
                        style="@style/edittext"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@id/tv_title1"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    style="@style/textview"

                    android:text="批次："
                    />
                <TextView
                    android:id="@+id/tv_cbatch"
                    android:layout_gravity="center_vertical"
                    style="@style/edittext"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_toRightOf="@id/tv_title1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    style="@style/textview"

                    android:text="卷号："
                    />
                <TextView
                    android:id="@+id/et_batch"
                    android:layout_gravity="center_vertical"
                    style="@style/edittext"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_toRightOf="@id/tv_title1"
                    />
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        style="@style/textview"

                        android:text="供应商批次："
                        />
                    <TextView
                        android:id="@+id/tv_cvenbatch"
                        android:layout_gravity="center_vertical"
                        style="@style/edittext"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_toRightOf="@id/tv_title1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        style="@style/textview"

                        android:text="应领数量："
                        />
                    <TextView
                        android:id="@+id/tv_moqty"
                        android:layout_gravity="center_vertical"
                        style="@style/edittext"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_toRightOf="@id/tv_title1"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        style="@style/textview"

                        android:text="料号："
                        />
                    <TextView
                        android:id="@+id/tv_cinvcode"
                        android:layout_gravity="center_vertical"
                        style="@style/edittext"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_toRightOf="@id/tv_title1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        style="@style/textview"

                        android:text="规格型号："
                        />
                    <TextView
                        android:id="@+id/tv_cInvStd"
                        android:layout_gravity="center_vertical"
                        style="@style/edittext"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_toRightOf="@id/tv_title1"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    style="@style/textview"
                    android:text="领用货位："
                    />
                <RadioGroup
                    android:id="@+id/rg_cposcode"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_cposcode"
                        android:checked="true"
                        android:text="S010103"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="S010104"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>


            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_below="@id/l_input"
            android:id="@+id/b_submit"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:background="@color/blue"
            android:textColor="@android:color/white"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/b_material"
            android:layout_toLeftOf="@id/b_submit"
            android:layout_below="@id/l_input"
            android:layout_margin="10dp"
            android:background="@color/blue"
            android:textColor="@android:color/white"
            android:text="投料"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_below="@id/b_submit"
            style="@style/line"></LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_below="@id/b_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>


</layout>